$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 700, Height: 600);

    #Title {
      $C.@Title {
        @Text = "CATALYT SETTINGS";
      }
    }

    #Content {
      LayoutMode: Top;

      Group {
        LayoutMode: TopScrolling;
        Anchor: (Width: 680, Top: 10, Left: 10, Right: 10, Bottom: 10);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #Settings {
          LayoutMode: Top;
          Padding: (Bottom: 10);

          Label {
            Style: (FontSize: 14, TextColor: #ffffffff);
            Text: "Lazy Loading (Chunk Optimizations)";
            Padding: (Bottom: 10);
          }

          Group {
            LayoutMode: Top;
            $C.@CheckBoxWithLabel #LazyToggle {
              @Text = "Lazy Block Entities";
            }
            Label {
              Style: (FontSize: 11, TextColor: #aaaaaaff, Wrap: true);
              Text: "Defers block entity creation until accessed (chests, furnaces, signs, etc.). Huge chunk load speedup.";
              Padding: (Left: 5, Top: 2, Bottom: 8);
            }
          }

          Group {
            LayoutMode: Top;
            $C.@CheckBoxWithLabel #TickLazyToggle {
              @Text = "Lazy Block Tick Discovery";
            }
            Label {
              Style: (FontSize: 11, TextColor: #aaaaaaff, Wrap: true);
              Text: "Skips crop/sapling discovery during chunk load. May stop automatic growth in newly generated chunks.";
              Padding: (Left: 5, Top: 2, Bottom: 8);
            }
          }

          Group {
            LayoutMode: Top;
            $C.@CheckBoxWithLabel #FluidLazyToggle {
              @Text = "Lazy Fluid Processing";
            }
            Label {
              Style: (FontSize: 11, TextColor: #aaaaaaff, Wrap: true);
              Text: "Skips fluid pre-simulation during chunk load. Massive speedup - water/lava will flow after loading.";
              Padding: (Left: 5, Top: 2, Bottom: 8);
            }
          }

          Label {
            Style: (FontSize: 11, TextColor: #ffaa00ff, Wrap: true);
            Text: "All features are disabled by default. Enable them to improve chunk loading performance.";
            Padding: (Top: 15, Bottom: 8);
          }
        }
      }
    }
  }

  $C.@BackButton {}
}
